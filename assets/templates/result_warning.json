{
  "type": "bubble",
  "size": "mega",
  "header": {
    "type": "box",
    "layout": "vertical",
    "paddingAll": "16px",
    "backgroundColor": "#FFF5F5", 
    "contents": [
      {
        "type": "text",
        "text": "AI 檢測分析報告",
        "weight": "bold",
        "size": "md",
        "color": "#333333"
      },
      {
        "type": "text",
        "text": "報告編號：PLACEHOLDER_REPORT_ID",
        "size": "xxs",
        "color": "#AAAAAA",
        "margin": "4px"
      }
    ]
  },
  "body": {
    "type": "box",
    "layout": "vertical",
    "paddingAll": "0px",
    "contents": [
      {
        "type": "box",
        "layout": "vertical",
        "paddingAll": "2px",
        "spacing": "xs",
        "contents": [
          {
            "type": "box",
            "layout": "horizontal",
            "spacing": "xs",
            "contents": [
              {
                "type": "image",
                "url": "PLACEHOLDER_IMG_ORIGINAL_BOXED",
                "size": "full",
                "aspectRatio": "1:1",
                "aspectMode": "cover",
                "flex": 1,
                "action": { "type": "uri", "uri": "PLACEHOLDER_IMG_ORIGINAL_BOXED" }
              },
              {
                "type": "image",
                "url": "PLACEHOLDER_IMG_CROP",
                "size": "full",
                "aspectRatio": "1:1",
                "aspectMode": "cover",
                "flex": 1,
                "action": { "type": "uri", "uri": "PLACEHOLDER_IMG_CROP" }
              }
            ]
          },
          {
            "type": "box",
            "layout": "horizontal",
            "spacing": "xs",
            "contents": [
              {
                "type": "image",
                "url": "PLACEHOLDER_IMG_CAM",
                "size": "full",
                "aspectRatio": "1:1",
                "aspectMode": "cover",
                "flex": 1,
                "action": { "type": "uri", "uri": "PLACEHOLDER_IMG_CAM" }
              },
              {
                "type": "image",
                "url": "PLACEHOLDER_IMG_CHART",
                "size": "full",
                "aspectRatio": "1:1",
                "aspectMode": "cover",
                "backgroundColor": "#FFFFFF",
                "flex": 1,
                "action": { "type": "uri", "uri": "PLACEHOLDER_IMG_CHART" }
              }
            ]
          }
        ]
      },
      {
        "type": "box",
        "layout": "vertical",
        "paddingAll": "20px",
        "contents": [
          {
            "type": "box",
            "layout": "horizontal",
            "contents": [
              {
                "type": "text",
                "text": "分析結果",
                "size": "sm",
                "color": "#888888",
                "flex": 1,
                "gravity": "center"
              },
              {
                "type": "box",
                "layout": "vertical",
                "backgroundColor": "PLACEHOLDER_BADGE_BG",
                "cornerRadius": "4px",
                "paddingStart": "8px",
                "paddingEnd": "8px",
                "paddingTop": "4px",
                "paddingBottom": "4px",
                "flex": 0,
                "contents": [
                  {
                    "type": "text",
                    "text": "PLACEHOLDER_BADGE_TEXT",
                    "color": "PLACEHOLDER_THEME_COLOR",
                    "size": "sm",
                    "weight": "bold"
                  }
                ]
              }
            ]
          },
          {
            "type": "text",
            "text": "PLACEHOLDER_TITLE",
            "weight": "bold",
            "size": "xl",
            "color": "#333333",
            "margin": "12px",
            "wrap": true
          },
          { "type": "separator", "margin": "20px" },
          {
            "type": "box",
            "layout": "vertical",
            "margin": "10px",
            "spacing": "md",
            "contents": [
              {
                "type": "button",
                "action": { 
                  "type": "postback", 
                  "label": "了解症狀詳情", 
                  "data": "action=view_education&topic=PLACEHOLDER_DISEASE_NAME" 
                },
                "style": "secondary",
                "color": "#666666",
                "height": "sm"
              },
              {
                "type": "button",
                "action": { "type": "message", "label": "填寫評估問卷", "text": "PLACEHOLDER_SURVEY_CMD" },
                "style": "primary",
                "color": "PLACEHOLDER_THEME_COLOR",
                "height": "sm"
              }
            ]
          }
        ]
      }
    ]
  },
  "footer": {
    "type": "box",
    "layout": "vertical",
    "paddingAll": "16px",
    "contents": [
      {
        "type": "button",
        "action": { "type": "postback", "label": "重新檢測", "data": "action=retry" },
        "style": "link",
        "height": "sm",
        "color": "#AAAAAA"
      },
      {
        "type": "text",
        "text": "本結果僅供參考，非醫療診斷。",
        "size": "xxs",
        "color": "#CCCCCC",
        "align": "center",
        "margin": "sm"
      }
    ]
  }
}